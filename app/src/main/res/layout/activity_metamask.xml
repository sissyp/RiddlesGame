<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#333030"
    tools:context=".MetamaskActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="708dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.451"
            app:srcCompat="@drawable/ic_riddle_game_logo"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="520dp"
            android:text="Welcome to R?ddle Game ! \n In order to play you need a metamask wallet account"
            android:textAlignment="center"
            android:textColor="@color/white">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="438dp"
            android:text="If you already have one then please enter your secret recovery phrase to continue: "
            android:textAlignment="center"
            android:textColor="@color/white">

        </TextView>


        <EditText
            android:id="@+id/privateKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="373dp"
            android:hint="Enter secret recovery phrase"
            android:textColor="@color/white">

        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="241dp"
            android:text="Or download metamask to continue: "
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/connectWithMetamask"
            android:layout_width="162dp"
            android:layout_height="61dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="124dp"
            android:layout_marginLeft="124dp"
            android:layout_marginBottom="293dp"
            android:onClick="connectWithMetamask"
            android:text="Connect to Metamask" />

        <Button
            android:id="@+id/downloadMetamask"
            android:layout_width="162dp"
            android:layout_height="61dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="128dp"
            android:layout_marginLeft="128dp"
            android:layout_marginBottom="61dp"
            android:onClick="downloadMetamask"
            android:text="Download Metamask" />

        <ImageView
            android:id="@+id/metamaskView"
            android:layout_width="321dp"
            android:layout_height="63dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="133dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.451"
            app:srcCompat="@drawable/ic_metamask_logo"
            tools:ignore="VectorDrawableCompat" />

    </RelativeLayout>
</LinearLayout>